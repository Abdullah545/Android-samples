<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="75dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/data_form_cancel_editor_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_gravity="left|center_vertical"
        android:textColor="#BF3136"
        android:id="@+id/data_form_cancel_editor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.telerik.widget.dataform.visualization.viewers.DataFormValidationView
        android:id="@+id/data_form_cancel_button_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>